<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment"
    android:orientation="vertical"
    android:background="#F0F0F0">

    <LinearLayout
        android:id="@+id/layoutPP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFF"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgPP"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginVertical="24dp"
            android:src="@drawable/ic_launcher_background"
            />

        <TextView
            android:id="@+id/tvNama"
            android:layout_below="@id/imgPP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Audenza Fajrul Andre"
            android:textAppearance="@style/Textview.PoppinsMedium20sp20262E"
            />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_below="@id/imgPP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="ketlopers@halodog.dev"
            android:textAppearance="@style/Textview.PoppinsReguler16spF0F0F0"
            />
        
    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF">

        <com.google.android.material.appbar.AppBarLayout
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:background="#FFF"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:tabIndicatorFullWidth="true"
                app:tabSelectedTextColor="#3D9CF2"
                app:tabIndicatorColor="#3D9CF2"
                app:tabTextColor="#C5C5C5"
                app:tabTextAppearance="@style/Tab"
                app:tabGravity="fill"
                app:tabMode="fixed"/>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>