<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/signinFragment">

    <fragment
        android:id="@+id/signinFragment"
        android:name="com.example.sprint3_hallodog.ui.auth.signin.SigninFragment"
        android:label="fragment_signin"
        tools:layout="@layout/fragment_signin" >
        <action
            android:id="@+id/action_signinFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_signinFragment_to_forgotpassFragment"
            app:destination="@id/forgotpassFragment" />
    </fragment>

    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.sprint3_hallodog.ui.auth.signup.SignupFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup" />

    <fragment
        android:id="@+id/forgotpassFragment"
        android:name="com.example.sprint3_hallodog.ui.auth.lupapass.ForgotpassFragment"
        android:label="fragment_forgotpass"
        tools:layout="@layout/fragment_forgotpass" />
</navigation>